<%= form_for :task do |f|-%>
  <%= f.label :name, Task.human_attribute_name('name') + ":" %>
  <br>
  <%= f.text_field :name, placeholder: Task.human_attribute_name('name') %>
  <br>
  <%= f.label :description, Task.human_attribute_name('description') + ":" %>
  <br>
  <%= f.text_field :description, placeholder: Task.human_attribute_name('description') %>
  <br>
  <%= f.label :importance, Task.human_attribute_name('importance') + ":" %>
  <br>
  <%= f.select :importance, options_for_select([['low'],['middle'],['high']]), placeholder: Task.human_attribute_name('importance') %>
  <br>
  <%= I18n.t(:done) %>
  <%= f.check_box :done %>
  <br>
  <%= f.datetime_select :expiry, order: [:day, :month, :year, :hour, :minute] %>
  <%= f.submit I18n.t(:save) %>
<% end %>
<% if flash[:error] %>
  <%= flash[:error].join(". ")%>
<% end %>
