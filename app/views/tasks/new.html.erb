<%= form_for :task do |f|-%>
    <%= f.text_field :name, placeholder: I18n.t(:name) %>
    <%= f.text_field :description, placeholder: I18n.t(:description) %>
    <%= f.text_field :importance, placeholder: I18n.t(:importance) %>
    <%= I18n.t(:done) %>
    <%= f.check_box :done %>
    <%= f.date_select :expiry, order: [:day, :month, :year] %>
    <%= f.submit I18n.t(:save) %>
<% end %>