<div>
  <%= link_to 'New task', 'tasks/new'%>
  <hr>
  <% @tasks.each do |task| %>
      <div>
        Task:
        <%= task.name %>
        <br>
        Description:
        <%= task.description %>
        <br>
        Importance:
        <%= task.importance %>
        <br>
        Expiry:
        <%= task.expiry %>
        <br>
        <%= link_to 'update task', edit_task_path(id: task.id)%>
        <br>
        <%= link_to 'delete task', delete_task_path(id: task.id), method: :delete %>
        <hr>
      </div>
  <% end %>
    <%= link_to('Log out', destroy_user_session_path, method: :delete) %>
</div>