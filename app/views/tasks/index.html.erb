<div>
  <%= link_to t(:new_task), 'tasks/new'%>
  <hr>
  <% @tasks.each do |task| %>
      <div>
        <%= I18n.t(:task) %>
        <%= task.name %>
        <br>
        <%= I18n.t(:description) %>
        <%= task.description %>
        <br>
        <%= I18n.t(:importance) %>
        <%= task.importance %>
        <br>
        <%= I18n.t(:expiry) %>
        <%= task.expiry %>
        <br>
        <%= I18n.t(:done) %>
        <%= check_box("done", value = task.done, disabled: true) %>
        <br>
        <%= link_to I18n.t(:update_task), edit_task_path(id: task.id)%>
        <br>
        <%= link_to I18n.t(:delete_task), delete_task_path(id: task.id), method: :delete %>
        <hr>
      </div>
  <% end %>
    <%= link_to(I18n.t(:log_out), destroy_user_session_path, method: :delete) %>
</div>